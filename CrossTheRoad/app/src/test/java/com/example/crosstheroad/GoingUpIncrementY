package com.example.crosstheroad;

import org.junit.Test;

import static org.junit.Assert.*;

import android.widget.RadioButton;

/**
 * Class checks if the Y value increments when the character moves up
 */
public class GoingUpIncrementY{
    private GameView gameView;
    @Test
    public void goingUpDecrement () {
        GameView.character.y = 50;
        GameView.character.goingUp = true;
        gameView.update();
        assert(GameView.character.y == 40);
    }

}
